<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/very_background"
        android:background="@drawable/czech"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/info"
                    android:padding="10dp"
                    android:text="@string/info"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:background="#33ffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/currently"
                    android:layout_below="@id/info"
                    android:padding="10dp"
                    android:textColor="#808080"
                    android:text="currently:"
                    android:gravity="center_horizontal"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/location"
                    android:layout_below="@id/currently"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="in Seoul, Korea"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_below="@id/info"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ai"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#4AC15A"
                android:layout_below="@id/top"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:weightSum="32">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                </LinearLayout>
                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                </LinearLayout>
                <ImageView
                    android:src="@drawable/up"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/down"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:src="@drawable/left"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:src="@drawable/right"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>









</LinearLayout>